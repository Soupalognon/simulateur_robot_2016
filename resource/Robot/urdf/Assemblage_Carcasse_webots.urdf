<?xml version="1.0" ?>
<robot name="Assemblage_Carcasse Webots">
    <webots>
        <plugin type="webots_ros2_driver::Ros2IMU">
            <enabled>true</enabled>
            <topicName>/imu</topicName>
            <alwaysOn>true</alwaysOn>
            <frameName>imu_link</frameName>
            <gyroName>imu gyro</gyroName>
            <accelerometerName>imu accelerometer</accelerometerName>
            <inertialUnitName>imu inertial</inertialUnitName>
        </plugin>

        <plugin type="webots_ros2_control::Ros2Control" />

        <plugin type="simulateur_robot_2016.plugin_example.PluginExample">
            <parameterExample>someValue</parameterExample>
        </plugin>

        <device reference="range_meter_1" type="DistanceSensor">
            <ros>
                <topicName>/range_meter</topicName>
                <enabled>true</enabled>
                <alwaysOn>true</alwaysOn>
            </ros>
        </device>
    </webots>

    <ros2_control name="WebotsControl" type="system">
        <hardware>
            <plugin>webots_ros2_control::Ros2ControlSystem</plugin>
        </hardware>
        <joint name="wheel_right_joint">
            <state_interface name="position"/>
            <command_interface name="velocity"/>
        </joint>
        <joint name="wheel_left_joint">
            <state_interface name="position"/>
            <command_interface name="velocity"/>
        </joint>

        <joint name="arm_left_joint">
            <state_interface name="position"/>
            <command_interface name="position"/>
        </joint>
        <joint name="arm_right_joint">
            <state_interface name="position"/>
            <command_interface name="position"/>
        </joint>
    </ros2_control>
</robot>
